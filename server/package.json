{
  "name": "kira-firebase-server",
  "version": "0.1.0",
  "description": "Firebase Functions Trigger for Kira",
  "repository": "git@github.com:aabccd021/kira-firebase.git",
  "author": "aabccd021 <aabccd021@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "coverage": "yarn test --coverage",
    "lint": "eslint . --ext ts",
    "latest": "yarn upgrade-interactive --latest",
    "please": "yarn tsc --noEmit && yarn lint --fix && yarn test ",
    "pull-request": "git pull origin main --no-edit && npm version patch && git push && yarn open-cli https://github.com/aabccd021/kira-firebase-server/compare/main...$(git branch --show-current)"
  },
  "dependencies": {
    "firebase-admin": "^9.11.0",
    "firebase-functions": "^3.14.1",
    "kira-core": "^0.3.32",
    "kira-nosql": "^0.1.26",
    "trimop": "^0.1.14"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-functional": "^3.5.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.1.2",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "filenames",
      "functional",
      "import",
      "no-null",
      "only-warn",
      "simple-import-sort",
      "unused-imports"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:functional/all",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:prettier/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "**/*.d.ts",
      "/functions"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "off",
      "eqeqeq": "warn",
      "functional/no-conditional-statement": "off",
      "functional/no-expression-statement": "off",
      "functional/functional-parameters": "off",
      "functional/no-return-void": "off",
      "import/no-cycle": "warn",
      "no-null/no-null": "warn",
      "no-unused-expressions": "off",
      "simple-import-sort/exports": "warn",
      "simple-import-sort/imports": "warn",
      "unused-imports/no-unused-imports-ts": "warn",
      "max-len": [
        "warn",
        {
          "code": 100,
          "comments": 100,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true
        }
      ],
      "max-params": [
        "warn",
        3
      ],
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true,
          "printWidth": 100
        }
      ]
    }
  }
}
